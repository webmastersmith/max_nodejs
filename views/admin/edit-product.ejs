<%- include('../includes/head.ejs') %> 
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/product.css" />
  </head>

  <body>
<%- include('../includes/navigation.ejs') %> 
<% const {title, imgUrl, price, description, uuid} = product %> 
    <main>
      <form class="product-form" action="/admin/edit-product/<%= uuid %> " method="POST">
        <div class="form-control">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" value="<%= title %> " />
        </div>
        
        <div class="form-control">
          <label for="imgUrl">Image</label>
          <input type="text" name="imgUrl" id="imgUrl" value="<%= imgUrl %> "/>
        </div>

        <div class="form-control">
          <label for="price">Price</label>
          <input type="text" name="price" id="price" value="<%= price %> " />
        </div>

        <div class="form-control">
          <label for="description">Description</label>
          <textarea name="description" id="description" rows="5"><%= description %> </textarea>
        </div>
        
        <button class="btn" type="submit" >Add Product</button>
      </form>
    </main>
<%- include('../includes/end.ejs') %> 