<%- include('../includes/head.ejs') %> 
    <link rel="stylesheet" href="/css/product.css" />
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %> 

    <main>
      <h1>Admin Product Page</h1>
      <% if (products.length > 0) {%>
      <div class="grid">
        <% products.forEach(({title, imgUrl, description, price, uuid}) => { %>
        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title"><%= title %></h1>
          </header>
          <div class="card__image">
            <img
              src="<%= imgUrl %>"
              alt="<%= title %>"
            />
          </div>
          <div class="card__content">
            <h2 class="product__price">$<%= price %></h2>
            <p class="product__description"><%= description %></p>
          </div>
          <div class="card__actions">
            <a href="/admin/edit-product/<%= uuid %> ">
              <button class="btn" data-uuid="<%= uuid %> ">Edit</button>
            </a>
            <a href="/admin/delete-product/<%= uuid %> ">
              <button class="btn" data-uuid="<%= uuid %> ">Delete</button>
            </a>
          </div>
        </article>
        <% }) %>
      </div>
      <%} else {%>
      <h1>No products found</h1>
      <%}%>
    </main>
    <%- include('../includes/end.ejs') %> 